{
  "name": "sdiff",
  "version": "0.1.0",
  "description": "Static diff checking tool for document validation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sdiff": "dist/index.js",
    "sdiff-interactive": "dist/index-interactive.js"
  },
  "scripts": {
    "build": "tsgo --skipLibCheck",
    "dev": "tsgo run src/index.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint src --ext .ts",
    "start": "node dist/index.js",
    "lsmcp": "lsmcp"
  },
  "keywords": [
    "diff",
    "text-comparison",
    "markdown",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ink": "^4.4.1",
    "ink-select-input": "^5.0.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@mizchi/lsmcp": "^0.10.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript/native-preview": "^7.0.0-dev.20251110.1",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
